\newcommand\drawLogo[1]{
% \begin{tikzpicture}[scale=#1,every node/.style={transform shape}]
\tikzset{external/export next=false}
\tikzsetnextfilename{IMTALogo}
\begin{tikzpicture}[transform canvas={scale=#1}]
% \begin{tikzpicture}[scale=#1,every node/.style={scale=#1}]
\def\h{0.67}
\fill[beamer@imtlightnlue] (0,0) -- (2*\h ,0) -- (0,-2*\h);
\fill[beamer@imtlightnlue] (2*\h,0) -- (2*\h,-2*\h) -- (4*\h,-2*\h) -- (4*\h,0) -- (3*\h,-\h) ;
\fill[beamer@imtlightnlue] (4*\h,-\h) -- (5*\h,0) -- (7*\h,0) -- (5*\h,-2*\h) -- (5*\h,-\h);
\def\gauche{-.03*#1}
\draw (0,-2*\h)++(\gauche,-.2) node (text1) [anchor= north west, font=\sffamily\large,inner sep=0pt,beamer@imttruedark] {\textbf{IMT Atlantique}};
\draw (0,-2*\h)++(\gauche,-.65) node [anchor=north west, font=\sffamily\normalsize,inner sep=0pt, beamer@imttruedark] {Bretagne-Pays de la Loire};
\draw (0,-2*\h)++(\gauche,-1) node [anchor=north west, font=\sffamily\normalsize,inner sep=0pt, beamer@imttruedark] {\'Ecole Mines-T\'el\'ecom};
\end{tikzpicture}
}

